<?xml version="1.0" encoding="UTF-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/navigation_bar_title">


<Preference
        android:key="navigation_options"
        android:fragment="com.android.settings.du.nav.NavbarSettings"
        android:title="@string/navigationbar_settings_title" />

<PreferenceScreen
        android:key="button_settings"
        android:title="@string/button_settings"
        android:fragment="com.android.settings.zephyr.ButtonSettings" />

<com.android.settings.preference.SystemSettingSwitchPreference
        android:key="nav_bar_dynamic"
        android:title="@string/nav_bar_dynamic_title"
        android:summary="@string/nav_bar_dynamic_summary"
        android:defaultValue="false" />

 <PreferenceScreen
        android:title="@string/navbar_tuner_title"
        android:summary="@string/navbar_tuner_summary" >
        <intent android:action="android.intent.action.MAIN"
            android:targetPackage="com.android.systemui"
            android:targetClass="com.android.systemui.tuner.NavbarActivity" />
    </PreferenceScreen>

</PreferenceScreen>

